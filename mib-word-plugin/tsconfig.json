{
  "compilerOptions": {
    "allowUnusedLabels": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "strict": true,
    "lib": [
      "es7",
      "dom"
    ],
    "pretty": true,
    "paths": {
      "@shared/*": ["../mib-shared/src/*"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "modules.d.ts",
    "src/**/*"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "ts-node": {
    "files": true
  }
}
